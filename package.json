{
  "name": "@antv/component",
  "version": "0.8.33",
  "description": "The component module for antv",
  "author": "https://github.com/orgs/antvis/people",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "esm",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/component.git"
  },
  "scripts": {
    "build": "run-s clean lib",
    "clean": "rimraf lib esm",
    "lib": "run-p lib:*",
    "lib:cjs": "tsc -p tsconfig.json --target ES5 --module commonjs --outDir lib",
    "lib:esm": "tsc -p tsconfig.json --target ES5 --module ESNext --outDir esm",
    "lint-stage": "lint-staged",
    "lint": "tslint -c tslint.json src/**/* tests/**/*",
    "lint-fix": "run-s lint-fix:*",
    "lint-fix:prettier": "prettier --write 'src/**/*.ts'",
    "lint-fix:tslint": "tslint -c tslint.json --fix 'src/**/*.ts' 'tests/**/*'",
    "coverage": "jest -w 16 --coverage",
    "test": "jest -w 16",
    "test-live": "DEBUG_MODE=1 jest --watch tests",
    "ci": "run-s build test coverage",
    "changelog": "generate-changelog",
    "prepublishOnly": "npm-run-all --parallel test build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint-stage build test"
    }
  },
  "devDependencies": {
    "@antv/g-canvas": "0.5.6",
    "@types/jest": "^24.0.18",
    "conventional-changelog-cli": "^2.1.1",
    "generate-changelog": "^1.8.0",
    "husky": "^3.0.4",
    "jest": "^26.0.1",
    "jest-electron": "^0.1.7",
    "lint-staged": "^9.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@antv/color-util": "^2.0.3",
    "@antv/dom-util": "~2.0.1",
    "@antv/g-base": "^0.5.9",
    "@antv/matrix-util": "^3.1.0-beta.1",
    "@antv/path-util": "~2.0.7",
    "@antv/scale": "~0.3.1",
    "@antv/util": "~2.0.0",
    "fecha": "~4.2.0",
    "tslib": "^2.0.3"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "tslint -c tslint.json --fix",
      "prettier --write",
      "git add"
    ]
  }
}
